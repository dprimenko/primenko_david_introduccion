<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contador_cafes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.primenko_david_introduccion.ContadorCafes_Activity">

    <TextView
        android:text="@string/txvCafeTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvCafeTitulo"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="@string/txvCafeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvCafeNum"
        android:layout_alignParentRight="true"/>

    <Button
        android:text="@string/btnMenos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMenos"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:text="@string/btnMas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMas"
        android:layout_alignBaseline="@+id/btnMenos"
        android:layout_alignBottom="@+id/btnMenos"
        android:layout_alignParentRight="true" />

    <TextView
        android:text="@string/txvTiempo"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvTiempo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/btnComenzar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnComenzar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
